<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Lumino UI Elements</title>
	<link href="/admin/css/bootstrap.min.css" rel="stylesheet">
	<link href="/admin/css/font-awesome.min.css" rel="stylesheet">
	<link href="/admin/css/datepicker3.css" rel="stylesheet">
	<link href="/admin/css/styles.css" rel="stylesheet">
	
	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<script src="js/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<% include admin_header%>
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="#">
					<em class="fa fa-home"></em>
				</a></li>
				<li class="active">Edit Bill</li>
			</ol>
		</div><!--/.row-->
		
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Edit Bill</h1>
			</div>
		</div><!--/.row-->
				<div class="panel panel-default">
					<div class="panel-heading">List</div>
					<div class="panel-body">
						<div class="col-md-6">
							<form role="form" action="http://localhost:3333/admin/edit_bill&5d13868f68c08634ec5c8d90" method="POST">
                                <% bill.forEach(function(item){%>
                                    <label>Customer name: </label><br>
                                    <input class="form-control" name="customername" value="<%=item.customerName%>">
                                    <label>Address: </label><br>
                                    <input class="form-control" name="address" value="<%=item.address%>">
                                    <label>Email: </label><br>
                                    <input class="form-control" name="email" value="<%=item.email%>">
                                    <label>Phone: </label><br>
                                    <input class="form-control" name="phone" value="<%=item.phone%>">
                                <%})%>
                                
                                <label>Order: </label>
                                <table class="table table-bordered">
                                    <thead>
                                      <tr>
                                        <th>Image</th>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total Price</th>
                                        <th>Option</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <%session.forEach(function(item){%>
                                            <tr>
                                                <td><img src="/img/product/<%=item.image%>" width="100px"></td>
                                                <td><%=item.prodName%></td>
                                                <td><%=item.price%></td>
                                                <td><input class="form-control" name="quantity" value="<%=item.quantity%>" size="1"></td>
                                                <td><%=item.price*item.quantity%></td>
                                                <td><a href="http://localhost:3333/admin/delete_product_bill&<%=item.prodID%>&<%=item.sessionID%>"
                                                        class="btn btn-primary height-auto btn-sm">X</a></td>
                                            </tr>
                                        <%})%>
                                    </tbody>
                                  </table>
                                  <input type="submit" class="btn btn-primary height-auto btn-sm" value="Edit">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                  <a href="http://localhost:3333/admin/bills" class="btn btn-primary height-auto btn-sm">Cancel</a><br/><br/>
							</form>
						</div>
					</div>
				</div><!-- /.panel-->
			</div><!-- /.col-->
			<div class="col-sm-12">
				<p class="back-link">Lumino Theme by <a href="https://www.medialoot.com">Medialoot</a></p>
			</div>
		</div><!-- /.row -->
	</div><!--/.main-->
	
<script src="/admin/js/jquery-1.11.1.min.js"></script>
	<script src="/admin/js/bootstrap.min.js"></script>
	<script src="/admin/js/chart.min.js"></script>
	<script src="/admin/js/chart-data.js"></script>
	<script src="/admin/js/easypiechart.js"></script>
	<script src="/admin/js/easypiechart-data.js"></script>
	<script src="/admin/js/bootstrap-datepicker.js"></script>
	<script src="/admin/js/custom.js"></script>
	
</body>
</html>
